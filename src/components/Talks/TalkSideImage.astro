---
/**
 * * These are alternating side cards with titles, text, and images
 * Recommend using 2 or 3 cards in a row
 */
import { Icon } from "astro-icon";

// components
import TalkCard from "@components/TalkCard/TalkCardSideImage.astro";

// images
import image1 from "@images/house.jpg";
import image2 from "@images/living-room.jpg";
import image3 from "@images/paint-swatches.jpg";

// data
import talkData from "@config/talkData.json";
---

<section id="services-side-image" class="overflow-hidden py-12">
    <div class="container">
        <div class="mx-auto flex max-w-2xl justify-center text-center">
            <h2 class="h2 relative z-20 mx-4">
                <div class="absolute left-0 top-0 hidden md:block">
                    <Icon
                        name="freehand-arrow-curl"
                        class="h-auto w-24 -translate-x-24 translate-y-12 -rotate-[45deg] -scale-x-100 text-primary-500"
                        aria-hidden="true"
                    />
                </div>
                Speaking <span class="text-primary-600">History</span>
            </h2>
        </div>
        <div class="mt-10 flex flex-col gap-16 md:mt-16 md:gap-24">
            {
                talkData.map((feature, idx) => (
                    <TalkCard
                        title={feature.title}
                        description={feature.description}
                        image={feature.image}
                        imageSide="left"
                        href={feature.link}
                        idx={idx}
                    />
                ))
            }
        </div>
    </div>
</section>
