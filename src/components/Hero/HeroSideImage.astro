---
/**
 * * Hero with background blobs and side image
 *
 * There is a commented out "awards" section below in case you want that
 */
import { Icon } from "astro-icon";
import { Image } from "astro:assets";

// components
import Button from "@components/Button/Button.astro";

import heroImage from "@assets/images/profile-pic.png";
import award1 from "@images/awards/award-yelp.png";
import award2 from "@images/awards/award-homeadvisor.png";
import award3 from "@images/awards/award-angieslist.png";
---

<section id="hero" class="relative mb-14 flex min-h-[60svh] w-full pb-10">
    <!-- Background -->
    <div class="absolute -z-10 h-full w-full">
        <Icon
            name="two-blobs"
            class="h-full w-full text-accent-cool/50"
            aria-hidden="true"
        />
    </div>

    <!-- hero items -->
    <div
        class="container grid items-start gap-8 pb-6 pt-36 md:grid-cols-2 md:pb-20 md:pt-44"
    >
        <!-- Hero text -->
        <div class="mx-auto max-w-[450px] md:ml-0">
            <h1
                class="text-4xl font-medium leading-tight lg:text-5xl lg:leading-tight"
                data-aos="fade-up"
            >
                Professional Prioritizer.
            </h1>
            <p class="mt-3 text-xl text-accent-warm lg:text-2xl" data-aos="fade-up">
                Data roots. Community heart.
            </p>
            <p class="description mt-6" data-aos="fade-up">
                Hi, I'm Monica! I spent my early career as a data engineer—building pipelines, debugging ETL jobs, and developing a deep appreciation for the unglamorous work that makes data usable. That technical foundation led me to developer advocacy, where I found my love for community, education, and helping people solve real problems. Now I'm a product manager at Starburst, leading data experience and data products — still learning in front of everyone, still community-obsessed.
            </p>
            <div class="mt-6 flex gap-4">
                <Button
                    variant="primary"
                    href="/contact/"
                    data-aos="fade-up"
                    data-aos-delay=".9"
                >
                    Get in touch today!
                </Button>
            </div>

            <!-- awards example, uncomment to see -->
            <!-- <div class="mt-10 flex flex-wrap gap-6 md:col-span-2">
        <Image
          src={award1}
          alt="yelp award"
          loading="lazy"
          height={100}
          class="h-10 w-auto"
        />
        <Image
          src={award2}
          alt="home advisor award"
          loading="lazy"
          height={100}
          class="h-10 w-auto"
        />
        <Image
          src={award3}
          alt="angies list award"
          loading="lazy"
          height={100}
          class="h-10 w-auto"
        />
      </div> -->
        </div>
        <!-- hero image -->
        <div class="mx-auto max-w-lg md:max-w-full">
            <Image
                src={heroImage}
                class="rounded-xl"
                alt="Monica Miller"
                loading="eager"
                width={600}
                densities={[1.5, 2]}
                data-aos="fade-in"
                data-aos-delay=".2"
            />
        </div>
    </div>
</section>
