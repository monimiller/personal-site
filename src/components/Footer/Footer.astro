---
// components
import FooterLink from "@components/Footer/FooterLink.astro";
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";
import Button from "@components/Button/Button.astro";
import SocialIcon from "@components/SocialIcon/SocialIcon.astro";
import Search from "astro-pagefind/components/Search";

// data
import siteData from "@config/siteData.json";

const today = new Date();
---

<footer class="container mb-16 mt-20 border-t border-t-base-300">
    <div class="grid w-full justify-between gap-4 md:grid-cols-2">
        <div class="grid gap-4 sm:grid-cols-2">
            <div class="mt-6 flex flex-col items-start gap-4">
                <SiteLogo />
                <div class="">
                    <Button variant="primary" href="/contact/"
                        >Contact Me</Button
                    >
                </div>
                <div class="hidden text-sm opacity-80 md:block">
                    &copy; {today.getFullYear()}
                    {" "}{siteData.name}. All rights reserved.
                </div>
            </div>

            <!-- TODO <Search id="search" className="pagefind-ui" uiOptions={{ showImages: false }} /> -->
        </div>

        <div class="flex items-center md:justify-end">
            <!-- Socials -->
            <div class="flex flex-col">
                <div class="flex gap-2">
                    <SocialIcon
                        href="https://twitter.com/Moni4489"
                        icon="tabler-brand-x"
                        social="twitter (x)"
                    />
                    <SocialIcon
                        href="https://www.linkedin.com/comm/mynetwork/discovery-see-all?usecase=PEOPLE_FOLLOWS&followMember=monimiller"
                        icon="tabler:brand-linkedin"
                        social="linkedin"
                    />
                    <SocialIcon
                        href="https://github.com/monimiller"
                        icon="tabler-brand-github"
                        social="github"
                    />
                    <!-- TODO -->
                    <!-- <SocialIcon -->
                    <!--     href="https://data-folks.masto.host/@monimiller" -->
                    <!--     icon="tabler-brand-mastodon" -->
                    <!--     social="mastodon" -->
                    <!-- /> -->
                </div>
            </div>
        </div>
    </div>
    <div class="mt-6 text-sm opacity-80 md:hidden">
        &copy; {today.getFullYear()}
        {" "}{siteData.name}. All rights reserved.
    </div>
</footer>
