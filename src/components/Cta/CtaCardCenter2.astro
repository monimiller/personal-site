---
/**
 * * CTA card with centered text and blobs
 */

import { Icon } from "astro-icon";

// components
import Button from "@components/Button/Button.astro";
---

<section id="cta" class="my-24 py-8 md:my-36">
  <div class="container">
    <div
      class="relative h-full w-full overflow-hidden rounded-xl bg-primary-100"
    >
      <!-- bottom left blob -->
      <Icon
        name="blob-1"
        class="absolute bottom-0 left-0 aspect-square h-[100%] -translate-x-[20%] translate-y-[40%] rotate-12 text-primary-400/50 md:h-[150%]"
        aria-hidden="true"
      />

      <!-- top right blob -->
      <Icon
        name="blob-3"
        class="absolute right-0 top-0 aspect-square h-[100%] -translate-y-[30%] translate-x-[20%] text-primary-400/50 md:h-[150%]"
        aria-hidden="true"
      />

      <!-- center card -->
      <div class="relative z-20 p-1">
        <div class="rounded-xl px-4 py-20 text-center">
          <div class="mx-auto max-w-2xl">
            <h2 class="h1">
              What are <span class="relative whitespace-nowrap">
                you
                <span>
                  <Icon
                    name="freehand-zig-underline"
                    class="absolute left-0 top-0 -z-10 h-full w-full translate-y-1/2 text-primary-400"
                    aria-hidden="true"
                  />
                </span>
              </span> waiting for?
            </h2>
            <p class="description mt-6">
              Schedule your free quote today and turn your vision into reality.
            </p>
            <div class="mt-10 flex justify-center">
              <Button variant="primary" href="/contact/" arrow="right">
                Schedule a free estimate
              </Button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
